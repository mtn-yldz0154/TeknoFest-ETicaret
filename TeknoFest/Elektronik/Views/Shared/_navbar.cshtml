
<header>
    <section class="top-bar">
       
        <nav style="height: 40px;" class="navbar navbar-expand-lg navbar-light bg-light">
            <div style="width:70px;height:110px;margin-left:15px;">
                <a style="margin-left:15px;" class="ml-3 navbar-brand" href="#">
                    <h1>
                        <span style="color: #6610f2"
                              class="typewrite"
                              data-period="1000"
                              data-type='["TeknoFest"]'></span>
                    </h1>
                </a>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul style="margin-left: 900px;" class="navbar-nav  navbar-right ">
                    <li style="position:absolute;margin-left:-500px;">
                        <form style="width:450px" asp-asp-controller="user" asp-action="search" method="post">
                            <div class="input-group">
                                <input name="q" type="text" class="form-control" placeholder="Anahtar Kelime">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </li>


                  

                    <li class="nav-item active">
                        <a id="a" class="nav-link a " href="/user/index"><i class="fa fa-home"></i> Anasayfa <span class="sr-only">(current)</span></a>
                    </li>
                    
                    <li class="nav-item active">
                        <a class="nav-link   a" id="a" href="/like/index">  <i class="fa fa-heart"></i> Favorilerim</a>
                    </li>

                   

                    <li class="nav-item active ">
                        <a id="a" class="nav-link  " href="/cart/index"><i class="bi bi-cart-fill"></i>   <i class="fa fa-shopping-cart"></i> Sepetim </a>
                    </li>
                 
                    @if (User.Identity.IsAuthenticated)
                    {

                        <div style="position:absolute;margin-left:330px;" class="dropdown">
                            <button class="btn btn-outline-dark dropdown-toggle text-primary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @if (User.Identity.IsAuthenticated) {
                                    <img style="border-radius:50%" width="35" height="30" src="~/img/@User.Identity.Name .jpg" />
                                }
                                else
                                {
                                    <i class="fa fa-user text-dark"></i>
                                }
                                @User.Identity.Name

                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item">@User.Identity.Name</a>
                                <a class="dropdown-item" href="/user/accountsetting/@User.Identity.Name"><img width="15px" height="15px" src="~/img/ayarlar.jpg" />  Hesap Ayarları</a>
                                <a class="dropdown-item" href="/cart/getorders"><img width="15px" height="15px" src="~/img/cartchecked.jpg" /> Siparişlerim</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="dropdown-item" href="/admin/getcategory"><img width="20px" height="20px" src="~/img/admin.jpg" /> Yönetici İşlemleri</a>
                                }
                                <a class="dropdown-item" href="/account/logout">  <img style="margin-right:5px" width="15px" height="15px" src="~/img/logout.jpg" />Çıkış</a>
                            </div>
                        </div>


                    }
                    else
                    {
                        <li style="margin-left:10px" class="nav-item active ">
                           <a id="a" class="nav-link text-primary" href="/account/login"> <img src="~/img/login.jpg" width="18" height="18" /> Giriş</a>
                        </li>
                        <li class="nav-item active">
                            <a id="a" class="nav-link text-primary" href="/account/register"><img src="~/img/register.jpg" width="18" height="18" /> Kaydol</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </section>

    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <div class="container">
            <button type="button" class="navbar-toggler border" data-bs-toggle="collapse" data-bs-target="#navbar_main">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar_main">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        <a href="" class="nav-link active ps-0">Elektronik</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link active">Telefon</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link active">Bilgisayar</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link active">Tablet</a>
                    </li
                    <li class="nav-item">
                        <a href="" class="nav-link active">TV</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link active">Akıllı Saat</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link active">Ekipmanlar</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link active">Kamera</a>
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>
</header>


