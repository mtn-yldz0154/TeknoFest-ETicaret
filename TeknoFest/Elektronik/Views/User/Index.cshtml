                            </a>
                            <figcaption class="info-wrap border-top">

                                <form asp-controller="Like" asp-action="AddToLike" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button style="margin-left:5px;" class="mr-2 float-end btn btn-light btn-icon">
                                        <i class="fa fa-heart"></i>
                                    </button>

                                </form>
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button class="mr-2 float-end btn btn-light btn-icon">
                                        <i class="fa fa-shopping-cart"></i>
                                    </button>

                                </form>
                                <a href="" class="title text-truncate">
                                    @item.ProductName
                                </a>
                                <div class="price-wrap">
                                    <span class="price">@item.ProductPrice.ToString("c")</span>
                                   
                                </div>
                            </figcaption>
                        </figure>
                    </div>
                }

            }


        </div>

    </div>
