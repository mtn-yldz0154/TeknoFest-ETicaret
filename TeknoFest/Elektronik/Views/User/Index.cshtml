</div>
<section class="pt-3">
    <div class="container">

        <header>

            <h2>
                <span style="color: #6610f2;text-align:center"
                      class="typewrite"
                      data-period="1000"
                      data-type='["İndirimli Ürünler"]'></span>
            </h2>
            <br />
        </header>
        <div class="row">
            @foreach (var item in Model)
            {
                @if (item.SaleProductPrice > 0)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <figure class="card shadow">
                            <div>
                                @if (item.StarNumber == 0)
                                {
                                    <div class="rating-wrap">
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                }
                                @if (item.StarNumber > 0 && item.StarNumber <= 20)
                                {
                                    <div class="rating-wrap">
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                }
                                @if (item.StarNumber > 20 && item.StarNumber <= 40)
                                {
                                    <div class="rating-wrap">
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                }
                                @if (item.StarNumber > 40 && item.StarNumber <= 60)
                                {
                                    <div class="rating-wrap">
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star "></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                }
                                @if (item.StarNumber > 60 && item.StarNumber <= 80)
                                {
                                    <div class="rating-wrap">
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                }
                                @if (item.StarNumber > 80)
                                {
                                    <div class="rating-wrap">
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked "></span>
                                        <span class="fa fa-star checked"></span>
                                    </div>
                                }
                            </div>
                            <a href="/user/productdetails/@item.ProductId" class="img-wrap">

                                <b class="badge bg-success"> İndirim </b>
                                <img src="~/img/@item.ProductImageUrl" alt="">

                            </a>
                            <figcaption class="info-wrap border-top">

                                <form asp-controller="Like" asp-action="AddToLike" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button style="margin-left:5px;" class="mr-2 float-end btn btn-light btn-icon">
                                        <i class="fa fa-heart"></i>
                                    </button>

                                </form>
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button class="mr-2 float-end btn btn-light btn-icon">
                                        <i class="fa fa-shopping-cart"></i>
                                    </button>

                                </form>
                                <a href="" class="title text-truncate">
                                    @item.ProductName
                                </a>
                                <div class="price-wrap">
                                    <span class="price">@item.SaleProductPrice.ToString("c")</span>
                                    <del class="price-old">@item.ProductPrice.ToString("c")</del>
                                </div>
                            </figcaption>
                        </figure>
                    </div>
                }

            }


        </div>
        
        <br /><br /><br /><br />
       
        <header>
           
            <h2>
                <span style="color: #6610f2;text-align:center"
                      class="typewrite"
                      data-period="1000"
                      data-type='["Popüler Ürünler"]'></span>
            </h2>
            <br />
        </header>
        <div class="row">
