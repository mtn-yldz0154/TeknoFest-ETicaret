}

<link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />



<!-- slider -->
<section class="pt-3 slider">
    <div class="container">
        <main class="card">
            <div class="row p-lg-2 p-1">
                <aside class="d-none d-lg-block col-lg-3">
                    <nav class="nav nav-pills flex-column flex-nowrap overflow-auto slider__nav">
                        <a style="margin-bottom:20px" href="#" class="nav-link active">Elektronik</a>
                       
                       
                            
                            <a href="/user/categorydetails/1" class="nav-link">Telefon</a>
                            <a href="/user/categorydetails/2" class="nav-link">Bilgisayar</a>
                            <a href="/user/categorydetails/3" class="nav-link">Tablet</a>
                            <a href="/user/categorydetails/4" class="nav-link">Akıllı Saat</a>
                            <a href="/user/categorydetails/6" class="nav-link">Ekipmanlar</a>
                            <a href="/user/categorydetails/8" class="nav-link">TV</a>
                            <a href="/user/categorydetails/7" class="nav-link">Kamera</a>
                           
                        
                    </nav>
                </aside>
                <div class="col-lg-9">
                    <div id="slider" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#slider" data-bs-slide-to="0" class="active"></button>
                            <button type="button" data-bs-target="#slider" data-bs-slide-to="1"></button>
                            <button type="button" data-bs-target="#slider" data-bs-slide-to="2"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/slider-1.jpeg" alt="" class="d-block w-100">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/slider-2.jpeg" alt="" class="d-block w-100">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/slider-3.jpeg" alt="" class="d-block w-100">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#slider" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#slider" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</section>
