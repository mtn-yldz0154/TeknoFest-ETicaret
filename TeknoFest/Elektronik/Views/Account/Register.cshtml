<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="~/login-form-02/fonts/icomoon/style.css">

	<link rel="stylesheet" href="~/login-form-02/css/owl.carousel.min.css">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/login-form-02/css/bootstrap.min.css">

	<!-- Style -->
	<link rel="stylesheet" href="~/login-form-02/css/style.css">

	<title>Kaydol</title>
</head>
<body>


	<div class="d-lg-flex half">
		<div class="bg order-1 order-md-2">
			<img width="900" height="750" src="~/img/iphonex.jpg" />
		</div>
		<div class="contents order-2 order-md-1">

			<div class="container">
				<div class="row align-items-center justify-content-center">
					<div class="col-md-8">
						<h3><strong style="color:#6610f2">Üye Oluşturma Formu</strong></h3>
						<br />

						<form asp-controller="Account" asp-action="Register" method="post">
							<div class="row">
								<div class="col-md-6">
									<div class="form-group first">
										<label style="color:#6610f2" for="username">Adınız</label>
										<input asp-for="Name" type="text" class="form-control" placeholder="" id="username">
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group first">
										<label style="color:#6610f2" for="username">Soyadınız</label>
										<input asp-for="LastName" type="text" class="form-control" placeholder="" id="username">
									</div>
								</div>
							</div>
							
						
							<div class="form-group last mb-3">
								<label style="color:#6610f2" for="username">Kullanıcı Adız</label>
								<input asp-for="UserName" type="text" class="form-control" placeholder="" id="username">
							</div>
							<div class="form-group last mb-3">
								<label style="color:#6610f2" for="username">Mail Adresiniz</label>
								<input asp-for="Email" type="text" class="form-control"  id="username">
							</div>
							<div class="row">
								<div class="form-group first">
									<label style="color:#6610f2" for="password">Parola</label>
									<input asp-for="Password" type="password" class="form-control" placeholder="" id="password">
								</div>
								<div class="col-md-6">
									<div class="form-group first">
										<label style="color:#6610f2" for="password">Tekrar Parola</label>
										<input asp-for="RePassword" type="password" class="form-control" placeholder="" id="password">
									</div>

								</div>
							</div>

							<input style="background-color:#6610f2;color:wheat" type="submit" value="Kaydol" class="btn btn-block btn-primary">

						</form>
						<br />
						<a style="text-decoration:none;background-color:#6610f2" href="/account/login">
							<input style="background-color:#6610f2;color:wheat" type="submit" value="Giriş" class="btn btn-block ">
						</a>
					</div>
				</div>
			</div>
		</div>


	</div>



	<script src="~/login-form-02/js/jquery-3.3.1.min.js"></script>
	<script src="~/login-form-02/js/popper.min.js"></script>
	<script src="~/login-form-02/js/bootstrap.min.js"></script>
	<script src="~/login-form-02/js/main.js"></script>
</body>
</html>