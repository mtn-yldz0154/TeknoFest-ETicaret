@model RoleModel
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Role Ekle</h1>
<hr />
<br />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateRole" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div style="margin-left:10px;" class="form-group row ml-2">
                <label asp-for="RoleName" class="col-sm-2 col-form-label">Role Adı</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RoleName">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <br /> <br />
            </div>
            <div class="form-group row">
                <div class="col-sm-12 offset-sm-2">
                    <button type="submit" class="btn btn-outline-primary">Role Kaydet</button>
                </div>

            </div>
        </form>
    </div>
</div>
<script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

