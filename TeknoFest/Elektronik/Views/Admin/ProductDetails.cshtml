@model Product
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ProductDetails</h1>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">


<div style="margin-top: 40px;margin-bottom: 80px;margin-left:30px; " class="row">
    <div class="col-md-3">

        <img src="~/img/@Model.ProductImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9 mt-1">
        <h3 class="class=" text-primary" style="color:cornflowerblue">
            <p style="display:inline;font-size:18px;color:black">Ürün Adı:</p> @Model.ProductName
        </h3> <hr>
        <h4 style="color:cornflowerblue"><p style="display:inline;font-size:20px;color:black">Ürün Kategori:</p> @ViewBag.ctg</h4>
        <div class="mb-5">
            <h4 style="color:cornflowerblue">  <p style="display:inline;font-size:20px;color:black">Ürün Rengi:</p> @Model.ProductOzellik</h4>
            <br />
            <h4 style="color:cornflowerblue"> <p style="display:inline;font-size:20px;color:black">Ürün Açıklaması:</p> @Model.ProductDespcription</h4>

            <h4 style="color:cornflowerblue"> <p style="display:inline;font-size:20px;color:black">Ürün Stok Adeti:</p> @Model.ProductStock</h4>
            <br />
            <h4 style="color:darkblue">
                <p style="display:inline;font-size:21px;color:black;">Ürün Fiyatı:</p>
                @Model.ProductPrice <i class="fa fa-turkish-lira" style="font-size:20px;"></i>
            </h4>
            <br />
            <a href="/admin/UpdateProduct/@Model.ProductId" class="btn btn-warning btn-lg mr-3">Update</a>
            <a href="/admin/DeleteProduct/@Model.ProductId" class="btn btn-danger btn-lg">Delete</a>
     
        </div>
    </div>
 </div>