@model List<Product>
@{
    ViewData["Title"] = "CategoryDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h1>@ViewBag.entity Ürünleri</h1>
<hr />
<br />



<div class="container mt-3">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card" style="width:300px;height:400px;margin-left:60px;">
                    <img class="card-img-top" src="~/img/@item.ProductImageUrl" alt="Card image" style="width:100%;height:70%;">
                    <div class="card-body">

                        <div class="mb-3">
                            <h6 class="card-title ml-3" style="color:darkslateblue;margin-left:22px;"><p style="display:inline;color:black;">Ürün Adı: </p>@item.ProductName</h6>
                            <h6 style="color:darkslateblue;margin-left:27px;">
                                <p style="display:inline;color:black;">Kategori:</p>
                                @ViewBag.entity
                            </h6>
                            <h6 style="color:darkslateblue;margin-left:27px;">
                                <p style="display:inline;color:black;padding-left:20px;margin-left:4px;"> Renk:</p>
                                @item.ProductOzellik  <p style="display:inline;color:black;padding-left:20px;"> Fiyat:</p> @item.ProductPrice<i class="fa fa-turkish-lira" style="font-size:13px;"></i>
                            </h6>

                        </div>

                        <a href="/admin/productdetails/@item.ProductId" class="btn btn-info" style="margin-left:20px;">Detay</a>
                        <a href="/admin/updateproduct/@item.ProductId" class="btn btn-warning" style="margin-left:7px;">Düzenle</a>
                        <a href="/admin/deleteproduct/@item.ProductId" class="btn btn-danger " style="margin-left:7px;">Kaldır</a>

                    </div>
                </div>

                <br>
            </div>
        }
    </div>
</div>







