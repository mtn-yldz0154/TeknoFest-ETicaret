@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Kategori Düzenle</h1>
<hr />
<br />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="UpdateCategory" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.CategoryId" />
            <div style="margin-left:10px;" class="form-group row ml-2">
                <label asp-for="CategoryName" class="col-sm-2 col-form-label">Kategori Adı</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="CategoryName">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <br /> <br />
            </div>
            <div style="margin-left:10px;" class="form-group row ml-2">
                <label asp-for="CategoryDespcription" class="col-sm-2 col-form-label">Açıklama</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="CategoryDespcription">
                    <span asp-validation-for="CategoryDespcription" class="text-danger"></span>
                </div>
                <br /> <br />
            </div>
            <div class="form-group row">
                <div class="col-sm-12 offset-sm-2">
                    <button type="submit" class="btn btn-outline-primary">Kategori Düzenle</button>
                </div>

            </div>
        </form>
    </div>
</div>


